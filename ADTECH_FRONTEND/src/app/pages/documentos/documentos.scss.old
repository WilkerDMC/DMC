      width: 100%;
      min-height: 500px;
      padding: 15px;
      border: 2px solid #ddd;
      border-radius: 8px;
      font-size: 14px;
      font-family: inherit;
      resize: vertical;

      &:focus {
        outline: none;
        border-color: #007bff;
      }
    }
  }
}

/* ===== RESPONSIVO ===== */
@media (max-width: 1024px) {
  .navigation {
    width: 200px;
  }

  .documentos-page {
    margin-left: 200px;
  }

  .documents-list {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }
}

@media (max-width: 768px) {
  .navigation {
    width: 60px;

    .title {
      display: none;
    }
  }

  .documentos-page {
    margin-left: 60px;
  }

  .documents-list {
    grid-template-columns: 1fr;
  }

  .categories-panel {
    .panel-header {
      flex-direction: column;
      align-items: flex-start;

      .search-box {
        max-width: 100%;
        width: 100%;
      }
    }

    .category-item {
      min-width: 150px;
    }
  }
}
