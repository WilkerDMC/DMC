}

.side-card.form-mode .side-title {
  font-size: 1.05rem;
  letter-spacing: 0.04em;
}

.side-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 0.5rem;
}

.side-chip {
  display: inline-flex;
  align-items: center;
  gap: 0.3rem;
  padding: 0.16rem 0.6rem;
  border-radius: 999px;
  font-size: 0.7rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  background: rgba(3, 18, 26, 0.96);
  color: rgba(204, 237, 245, 0.9);
  border: 1px solid rgba(0, 231, 252, 0.7);
}

.side-status {
  font-size: 0.72rem;
  padding: 0.1rem 0.6rem;
  border-radius: 999px;
  text-transform: uppercase;
  letter-spacing: 0.12em;
}

.side-status.pendente {
  background: rgba(255, 193, 7, 0.2);
  color: #ffca28;
}

.side-status.status-em-andamento {
  background: rgba(0, 231, 252, 0.2);
  color: #00e7fc;
}

.side-status.status-concluida {
  background: rgba(0, 255, 77, 0.2);
  color: #00ff4d;
}

.side-title {
  margin: 0;
  font-size: 1rem;
  font-weight: 600;
  color: #ffffff;
}

.side-meta-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 0.4rem 0.7rem;
  font-size: 0.76rem;
}

.meta-label {
  display: block;
  color: rgba(190, 222, 231, 0.7);
  text-transform: uppercase;
  letter-spacing: 0.14em;
  font-size: 0.66rem;
}

.meta-value {
  color: #f3fdff;
}

.urgency-pill {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  padding: 0.12rem 0.5rem;
  border-radius: 999px;
  font-size: 0.72rem;
}

.urgency-pill.alta {
  background: rgba(255, 71, 87, 0.22);
  color: #ff737f;
}

.urgency-pill.média,
.urgency-pill.media {
  background: rgba(255, 152, 0, 0.22);
  color: #ffb74d;
}

.urgency-pill.leve {
  background: rgba(0, 231, 252, 0.22);
  color: #8be9ff;
}

.side-section {
  padding-top: 0.35rem;
  border-top: 1px dashed rgba(0, 231, 252, 0.4);
}

.side-section-title {
  display: flex;
  align-items: center;
  gap: 0.3rem;
  font-size: 0.78rem;
  text-transform: uppercase;
  letter-spacing: 0.16em;
  color: rgba(196, 230, 239, 0.9);
  margin-bottom: 0.25rem;
}

.side-description {
  margin: 0;
  font-size: 0.8rem;
  color: rgba(214, 238, 245, 0.9);
}

.side-section-compact {
  border-top-style: solid;
}

.side-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 0.3rem;
}

.badge {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  padding: 0.14rem 0.5rem;
  border-radius: 999px;
  font-size: 0.72rem;
}

.badge.alta {
  background: rgba(255, 71, 87, 0.2);
  color: #ff737f;
}

.badge.média,
.badge.media {
  background: rgba(255, 152, 0, 0.2);
  color: #ffb74d;
}

.badge.leve {
  background: rgba(0, 231, 252, 0.2);
  color: #8be9ff;
}

.badge.neutral {
  background: rgba(100, 116, 139, 0.35);
  color: rgba(248, 250, 252, 0.95);
}

.side-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 0.6rem;
  margin-top: 0.4rem;
}

.btn-outline,
.btn-primary {
  border-radius: 999px;
  padding: 0.34rem 0.9rem;
  font-size: 0.8rem;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 0.3rem;
  cursor: pointer;
}

.btn-outline {
  border: 1px solid rgba(0, 231, 252, 0.7);
  background: rgba(5, 10, 17, 0.96);
  color: #e9fbff;
}

.btn-primary {
  border: none;
  background: linear-gradient(120deg, #00ff4d, #00e7fc);
  color: #020609;
  box-shadow:
    0 12px 34px rgba(0, 0, 0, 0.8),
    0 0 24px rgba(0, 255, 77, 0.7);
}

.side-card.empty {
  align-items: center;
  text-align: center;
}

.side-card.empty h2 {
  margin: 0.4rem 0 0.2rem;
  font-size: 1rem;
  color: #ffffff;
}

.side-card.empty p {
  margin: 0;
  font-size: 0.8rem;
  color: rgba(210, 235, 242, 0.86);
}

.empty-icon {
  width: 46px;
  height: 46px;
  border-radius: 999px;
  background: radial-gradient(circle, rgba(0, 231, 252, 0.4), rgba(0, 0, 0, 0.9));
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow:
    0 0 16px rgba(0, 231, 252, 0.7),
    0 0 26px rgba(0, 255, 77, 0.6);
}

.empty-icon ion-icon {
  font-size: 1.4rem;
  color: #ffffff;
}

/* Formulário do painel direito */
.side-form {
  display: flex;
  flex-direction: column;
  gap: 0.6rem;
}

.form-row {
  display: flex;
  flex-direction: column;
  gap: 0.26rem;
}

.form-row label {
  font-size: 0.72rem;
  text-transform: uppercase;
  letter-spacing: 0.16em;
  color: rgba(201, 232, 240, 0.9);
}

.form-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.form-input-wrapper input,
.form-input-wrapper select {
  width: 100%;
  border-radius: 12px;
  border: 1px solid rgba(0, 231, 252, 0.5);
  background: linear-gradient(135deg, rgba(7, 12, 20, 0.95), rgba(5, 9, 16, 0.98));
  color: #e9fbff;
  font-size: 0.8rem;
  padding: 0.44rem 0.75rem 0.44rem 2.2rem;
  outline: none;
  box-shadow:
    inset 0 0 0 1px rgba(0, 0, 0, 0.8),
    0 8px 18px rgba(0, 0, 0, 0.7);
  transition: box-shadow 0.22s var(--anim-ease), border-color 0.22s var(--anim-ease), transform 0.18s var(--anim-ease),
    background 0.18s var(--anim-ease);
}

.form-input-wrapper input::placeholder {
  color: rgba(184, 214, 222, 0.58);
}

.form-input-wrapper:hover input,
.form-input-wrapper:hover select {
  border-color: rgba(0, 231, 252, 0.8);
  background: linear-gradient(135deg, rgba(12, 18, 28, 0.98), rgba(8, 14, 24, 0.98));
}

.form-input-wrapper input:focus,
.form-input-wrapper select:focus {
  box-shadow:
    inset 0 0 0 1px rgba(0, 0, 0, 0.9),
    0 0 0 1px rgba(0, 231, 252, 0.8),
    0 0 16px rgba(0, 231, 252, 0.65);
  transform: translateY(-1px);
}

.form-input-icon {
  position: absolute;
  left: 0.7rem;
  font-size: 1rem;
  color: rgba(184, 214, 222, 0.75);
  pointer-events: none;
  transition: color 0.22s var(--anim-ease), transform 0.18s var(--anim-ease);
}

.form-input-wrapper input:focus + .form-input-icon,
.form-input-wrapper select:focus + .form-input-icon {
  color: #00e7fc;
  transform: translateY(-1px) scale(1.05);
}

.form-row textarea {
  resize: vertical;
  min-height: 80px;
}

.form-textarea-wrapper {
  position: relative;
}

.form-textarea-wrapper textarea {
  width: 100%;
  border-radius: 12px;
  border: 1px solid rgba(0, 231, 252, 0.5);
  background: linear-gradient(135deg, rgba(7, 12, 20, 0.95), rgba(5, 9, 16, 0.98));
  color: #e9fbff;
  font-size: 0.8rem;
  padding: 0.55rem 0.75rem 0.55rem 2.4rem;
  outline: none;
  min-height: 110px;
  box-shadow:
    inset 0 0 0 1px rgba(0, 0, 0, 0.8),
    0 8px 18px rgba(0, 0, 0, 0.7);
  transition: box-shadow 0.22s var(--anim-ease), border-color 0.22s var(--anim-ease), transform 0.18s var(--anim-ease),
    background 0.18s var(--anim-ease);
}

.form-textarea-wrapper textarea::placeholder {
  color: rgba(184, 214, 222, 0.58);
}

.form-textarea-wrapper textarea:hover {
  border-color: rgba(0, 231, 252, 0.8);
  background: linear-gradient(135deg, rgba(12, 18, 28, 0.98), rgba(8, 14, 24, 0.98));
}

.form-textarea-wrapper textarea:focus {
  box-shadow:
    inset 0 0 0 1px rgba(0, 0, 0, 0.9),
    0 0 0 1px rgba(0, 231, 252, 0.8),
    0 0 16px rgba(0, 231, 252, 0.65);
  transform: translateY(-1px);
}

.form-textarea-icon {
  position: absolute;
  left: 0.7rem;
  top: 0.8rem;
  font-size: 1rem;
  color: rgba(184, 214, 222, 0.75);
  pointer-events: none;
  transition: color 0.22s var(--anim-ease), transform 0.18s var(--anim-ease);
}

.form-textarea-wrapper textarea:focus + .form-textarea-icon {
  color: #00e7fc;
  transform: translateY(-2px) scale(1.05);
}

.two-columns {
  flex-direction: row;
  gap: 0.5rem;
}

.two-columns > div {
  flex: 1;
}

.color-choices {
  display: flex;
  gap: 0.4rem;
}

.color-dot {
  width: 16px;
  height: 16px;
  border-radius: 999px;
  border: 2px solid transparent;
  background: rgba(148, 163, 184, 0.5);
  cursor: pointer;
  transition: transform 0.18s var(--anim-ease), box-shadow 0.18s var(--anim-ease), border-color 0.18s var(--anim-ease);
}

.color-dot.cyan {
  background: #00e7fc;
}

.color-dot.green {
  background: #00ff4d;
}

.color-dot.orange {
  background: #ff9800;
}

.color-dot.red {
  background: #ff4757;
}

.color-dot.purple {
  background: #a855f7;
}

.color-dot.active {
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.9);
  border-color: #ffffff;
  transform: scale(1.1);
}

.color-legend {
  margin-top: 0.35rem;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 0.18rem 0.5rem;
  font-size: 0.7rem;
  color: rgba(201, 232, 240, 0.85);
}

.color-legend-item {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
}

.legend-dot {
  width: 8px;
  height: 8px;
  border-radius: 999px;
  box-shadow: 0 0 6px currentColor;
}

.legend-dot.cyan {
  background: #00e7fc;
  color: #00e7fc;
}

.legend-dot.green {
  background: #00ff4d;
  color: #00ff4d;
}

.legend-dot.orange {
  background: #ff9800;
  color: #ff9800;
}

.legend-dot.red {
  background: #ff4757;
  color: #ff4757;
}

.legend-dot.purple {
  background: #a855f7;
  color: #a855f7;
}

/* Responsivo básico */
@media (max-width: 1200px) {
  .agenda-main {
    margin-left: 220px;
    max-width: calc(100% - 220px - 2rem);
  }
}

@media (max-width: 1024px) {
  .agenda-layout {
    grid-template-columns: minmax(0, 1.8fr) minmax(260px, 1fr);
  }

  .agenda-header {
    flex-direction: column;
    align-items: stretch;
  }

  .agenda-filters {
    width: 100%;
    flex-wrap: wrap;
    justify-content: flex-start;
  }
}

@media (max-width: 900px) {
  .agenda-hero {
    flex-direction: column;
    align-items: stretch;
    padding: 1.6rem 1.4rem;
  }

  .navigation {
    position: static;
    margin-bottom: 1.2rem;
  }

  .agenda-main {
    margin-left: 0;
    max-width: 100%;
  }

  .agenda-header {
    flex-direction: column;
  }

  .agenda-filters {
    min-width: 0;
    width: 100%;
    flex-wrap: wrap;
    justify-content: flex-start;
  }

  .agenda-layout {
    grid-template-columns: minmax(0, 1fr);
    min-height: auto;
  }

  .agenda-side-panel {
    order: -1;
    height: auto;
  }

  .agenda-center {
    height: auto;
  }
}

