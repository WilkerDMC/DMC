  justify-content: center;
  font-weight: 700;
  color: #ffffff;
  font-size: 0.9rem;
  position: relative;
}

.chat-user-avatar.online::after {
  content: '';
  position: absolute;
  bottom: 2px;
  right: 2px;
  width: 12px;
  height: 12px;
  background: #00ff4d;
  border: 2px solid rgba(10, 18, 26, 0.98);
