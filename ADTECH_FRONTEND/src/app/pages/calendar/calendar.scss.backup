/* Painel direito */
.agenda-side-panel {
  align-self: stretch;
  background: radial-gradient(circle at top right, rgba(0, 231, 252, 0.09), transparent 55%),
              radial-gradient(circle at bottom left, rgba(0, 255, 77, 0.06), transparent 60%);
  border-radius: 24px;
  padding: 1rem 0.9rem 1.1rem;
  box-shadow:
    0 22px 60px rgba(0, 0, 0, 0.9),
    0 0 26px rgba(0, 231, 252, 0.32);
  border: 1px solid rgba(0, 231, 252, 0.16);
  backdrop-filter: blur(14px) saturate(150%);
  -webkit-backdrop-filter: blur(14px) saturate(150%);
  height: 100%;
}

.side-card {
  background: linear-gradient(145deg, rgba(17, 17, 17, 0.96), rgba(10, 16, 24, 0.98));
  border-radius: 20px;
  padding: 1.1rem 1rem 1rem;
  border: 1px solid rgba(0, 231, 252, 0.26);
  box-shadow:
    0 16px 42px rgba(0, 0, 0, 0.82),
    0 0 26px rgba(0, 231, 252, 0.4);
  display: flex;
  flex-direction: column;
  gap: 0.7rem;
  min-height: 0;
  transition: box-shadow 0.25s var(--anim-ease), transform 0.25s var(--anim-ease), border-color 0.25s;
}

.side-card:hover {
  transform: translateY(-1px);
  box-shadow:
    0 20px 54px rgba(0, 0, 0, 0.9),
    0 0 32px rgba(0, 231, 252, 0.5);
}

.side-card.form-mode {
  padding: 1.3rem 1.2rem 1.2rem;
