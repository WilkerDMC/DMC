/* ===== HERO BACKGROUND IGUAL LOGIN/DASHBOARD ===== */
.dashboard-hero {
  min-height: 100vh;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-primary, #0a0a0a);
  isolation: isolate;
  overflow: hidden;
  padding: 2.5rem 2.5rem;
}

.hero-flare {
  position: absolute;
  top: 5%;
  left: -5%;
  width: 760px;
  height: 98%;
  background: radial-gradient(
    ellipse at left center,
    rgba(0, 231, 252, 0.36) 0%,
    rgba(0, 231, 252, 0.2) 30%,
    transparent 70%
  );
  filter: blur(84px);
  z-index: 0;
  pointer-events: none;
}

.hero-flare-secondary {
  position: absolute;
  top: 5%;
  right: -5%;
  width: 680px;
  height: 92%;
  background: radial-gradient(
    ellipse at right center,
    rgba(0, 255, 77, 0.28) 0%,
    rgba(0, 255, 77, 0.12) 30%,
    transparent 70%
  );
  filter: blur(72px);
  z-index: 0;
  pointer-events: none;
}

.hero-triangle-pattern {
  position: absolute;
  inset: 0;
  z-index: 0;
  opacity: 0.36;
  pointer-events: none;
  background-image: url("data:image/svg+xml,%3Csvg width='1000' height='1000' xmlns='http://www.w3.org/2000/svg'%3E%3Cdefs%3E%3ClinearGradient id='tgA' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' style='stop-color:rgba(0,231,252,0.06);stop-opacity:1' /%3E%3Cstop offset='100%25' style='stop-color:rgba(0,255,77,0.03);stop-opacity:1' /%3E%3C/linearGradient%3E%3C/defs%3E%3Cpolygon points='0,0 500,433 0,866' fill='url(%23tgA)'/%3E%3C/svg%3E");
  background-size: 700px 700px;
  background-repeat: repeat;
}

/* ===== NAVEGAÇÃO LATERAL (igual dashboard/procuracao) ===== */
.navigation {
  position: fixed;
  width: 80px;
  height: 100%;
  background: #1a1a1a;
  border-right: 1px solid rgba(0, 231, 252, 0.2);
  box-shadow:
    4px 0 20px rgba(0, 0, 0, 0.5),
    inset -1px 0 20px rgba(0, 231, 252, 0.05);
  transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  z-index: 100;
  top: 0;
  left: 0;

  @media (max-width: 1024px) {
    width: 0;
    position: fixed;
  }
}

@media (min-width: 1025px) {
  .navigation:hover {
    width: 250px !important;

    ul li a {
      padding: 1rem 1.5rem;
      margin: 4px 8px;
      justify-content: flex-start;
    }

    ul li a .title {
      opacity: 1;
      width: auto;
    }

    ul li:hover a,
    ul li.hovered a {
      transform: translateX(8px);
    }
  }
}

.navigation ul {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.navigation ul li {
  position: relative;
  width: 100%;
  list-style-type: none;
}

.navigation ul li:nth-child(1) {
  margin-bottom: 40px;
}

.navigation ul li a {
  position: relative;
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 0.5rem;
  margin: 4px 4px;
  color: rgba(255, 255, 255, 0.7);
  text-decoration: none;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 12px;
  overflow: hidden;
  justify-content: center;

  &::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 3px;
    height: 0;
    background: linear-gradient(180deg, #00e7fc, #00ff4d);
    transition: height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  &::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 12px;
    padding: 1px;
    background: linear-gradient(135deg, rgba(0, 231, 252, 0), rgba(0, 255, 77, 0));
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask-composite: exclude;
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
}

.navigation ul li a .icon {
  font-size: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 2rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: drop-shadow(0 0 4px rgba(0, 231, 252, 0.3));

  ion-icon {
    --ionicon-stroke-width: 32px;
    font-size: 1.5rem;
    color: #00fc4c;
    display: block;
  }
}

.navigation ul li a .title {
  color: rgba(255, 255, 255, 0.6);
  font-size: 0.95rem;
  font-weight: 400;
  letter-spacing: 0.3px;
  white-space: nowrap;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 0;
  width: 0;
  overflow: hidden;
}

.navigation ul li a.active {
  background: linear-gradient(90deg, rgba(0, 231, 252, 0.15), rgba(0, 255, 77, 0.08));
  color: #00e7fc;
  box-shadow:
    0 4px 20px rgba(0, 231, 252, 0.3),
    inset 0 0 25px rgba(0, 231, 252, 0.08);

  &::before {
    height: 100%;
  }

  &::after {
    background: linear-gradient(135deg, rgba(0, 231, 252, 0.8), rgba(0, 255, 77, 0.8));
    opacity: 1;
  }

  .title {
    color: #00e7fc;
    font-weight: 600;
  }

  .icon {
    filter: drop-shadow(0 0 10px rgba(0, 231, 252, 0.9)) drop-shadow(0 0 15px rgba(0, 255, 77, 0.5));

    ion-icon {
      color: #00ff5e;
    }
  }
}

@media (min-width: 1025px) {
  .navigation ul li:hover a,
  .navigation ul li.hovered a {
    background: linear-gradient(90deg, rgba(0, 231, 252, 0.08), rgba(0, 255, 77, 0.05));
    color: #00e7fc;
    box-shadow:
      0 4px 15px rgba(0, 231, 252, 0.2),
      inset 0 0 20px rgba(0, 231, 252, 0.05);
    transform: translateX(8px);

    &::before {
      height: 100%;
    }

    &::after {
      background: linear-gradient(135deg, rgba(0, 231, 252, 0.6), rgba(0, 255, 77, 0.6));
      opacity: 1;
    }
  }

  .navigation ul li:hover a .title,
  .navigation ul li.hovered a .title {
    color: #00e7fc;
    transform: translateX(4px);
  }
}

/* Menu card styles */
.menu-card {
  background: linear-gradient(180deg, #101c2c 0%, #181f2f 100%);
  color: #fff;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  width: 260px;
  padding: 2.4rem 1.6rem;
  border-radius: 24px;
  box-shadow: 0 24px 64px rgba(3,6,10,0.7), 0 0 48px #00e7fc22;
  position: relative;
  z-index: 10;
  border-right: 3px solid #00e7fc33 !important;
  backdrop-filter: blur(18px) saturate(160%);
  outline: none;
  overflow: visible;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin: 2.2rem 0 2.2rem 2.2rem;
}
.menu-card ul {
  list-style: none;
  padding: 0;
  margin: 0;
  width: 100%;
}
.menu-card li {
  margin-bottom: 1.2rem;
  width: 100%;
}
.menu-card a {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 0.8rem 1.2rem;
  border-radius: 12px;
  color: #b3eaff;
  font-weight: 600;
  font-size: 1.08rem;
  text-decoration: none;
  transition: background 0.18s, color 0.18s;
}
.menu-card a.active, .menu-card a:hover {
  background: linear-gradient(90deg, #00e7fc44 0%, #00ff4d22 100%);
  color: #fff;
  box-shadow: 0 0 16px #00e7fc44;
}
.menu-card .icon {
  font-size: 1.5rem;
  color: #00e7fc;
  transition: color 0.18s;
}
.menu-card a.active .icon, .menu-card a:hover .icon {
  color: #00ff4d;
}

/* Calendar styles */
.calendar-visual {
  margin: 2rem auto 1.5rem auto;
  background: rgba(17,17,17,0.32);
  border-radius: 18px;
  box-shadow: 0 8px 32px rgba(0,231,252,0.12), 0 0 24px rgba(0,255,77,0.04);
  padding: 2.2rem 2.4rem 1.8rem 2.4rem;
  max-width: 680px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: box-shadow 0.4s cubic-bezier(.4,0,.2,1), background 0.4s cubic-bezier(.4,0,.2,1);
}

.calendar-month-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 1.2rem;
}
.calendar-month-title {
  font-size: 1.5rem;
  font-weight: 900;
  color: #00e7fc;
  letter-spacing: 1.2px;
  text-shadow: 0 2px 8px #00e7fc44, 0 1px 0 #fff2;
}
.calendar-nav-btn {
  background: linear-gradient(90deg, #00e7fc 0%, #00ff4d 100%);
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 0.4rem 1.2rem;
  font-weight: 700;
  font-size: 1rem;
  cursor: pointer;
  box-shadow: 0 2px 8px #00e7fc22;
  transition: background 0.2s, transform 0.2s;
}
.calendar-nav-btn:hover {
  background: linear-gradient(90deg, #00e7fc 40%, #00ff4d 100%);
  transform: scale(1.08);
}

.calendar-view-switch {
  display: flex;
  justify-content: center;
  gap: 1.2rem;
  margin-bottom: 1.2rem;
}
.calendar-view-switch button {
  background: none;
  border: 2px solid #00e7fc;
  color: #00e7fc;
  font-weight: 700;
  font-size: 1rem;
  border-radius: 8px;
  padding: 0.4rem 1.2rem;
  cursor: pointer;
  transition: background 0.2s, color 0.2s, border 0.2s;
}
.calendar-view-switch button.active,
.calendar-view-switch button:hover {
  background: linear-gradient(90deg, #00e7fc 0%, #00ff4d 100%);
  color: #fff;
  border-color: #00ff4d;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 0.6rem;
  width: 100%;
  margin-bottom: 0.8rem;
  transition: opacity 0.4s cubic-bezier(.4,0,.2,1);
}
.calendar-day-header {
  font-size: 1rem;
  font-weight: 700;
  color: #b3eaff;
  text-align: center;
  padding-bottom: 0.3rem;
}
.calendar-day {
  background: rgba(0,231,252,0.08);
  border-radius: 8px;
  min-height: 56px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 0.5rem 0.6rem;
  position: relative;
  cursor: pointer;
  transition: box-shadow 0.35s cubic-bezier(.4,0,.2,1), background 0.35s cubic-bezier(.4,0,.2,1);
  box-shadow: 0 1px 4px #00e7fc11;
  position: relative;
  overflow: hidden;
}
.calendar-day::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 8px;
  background: linear-gradient(120deg, #00e7fc33 0%, #00ff4d22 100%);
  opacity: 0;
  transition: opacity 0.35s var(--anim-ease);
  z-index: 0;
}
.calendar-day:hover::after {
  opacity: 0.18;
}
.calendar-day .task-preview {
  font-size: 0.85rem;
  color: #00ff4d;
  margin-top: 0.2rem;
  font-weight: 600;
  text-shadow: 0 1px 4px #00ff4d44;
  animation: fadeInUp 0.5s var(--anim-ease);
}
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(18px); }
  to { opacity: 1; transform: translateY(0); }
}
.calendar-day {
  transition: transform 0.22s var(--anim-ease), box-shadow 0.22s var(--anim-ease);
}
.calendar-day:hover {
  transform: scale(1.04);
  box-shadow: 0 0 24px #00e7fc44;
  z-index: 2;
}
.calendar-day.today {
  background: linear-gradient(90deg, #00e7fc33 0%, #00ff4d22 100%);
  border: 2px solid #00e7fc;
  box-shadow: 0 0 12px #00e7fc44;
}
.calendar-day.has-task {
  background: linear-gradient(90deg, #00e7fc22 0%, #00ff4d11 100%);
  border: 2px solid #00ff4d;
  box-shadow: 0 0 8px #00ff4d44;
}
.calendar-day-number {
  font-size: 1.1rem;
  font-weight: 800;
  color: #fff;
  margin-bottom: 0.2rem;
}
.calendar-task-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #00ff4d;
  position: absolute;
  bottom: 8px;
  right: 10px;
  box-shadow: 0 0 6px #00ff4d88;
}
.calendar-day:hover {
  background: linear-gradient(90deg, #00e7fc44 0%, #00ff4d22 100%);
  box-shadow: 0 0 16px #00e7fc55;
  z-index: 2;
}
.calendar-day.selected {
  background: linear-gradient(90deg, #00e7fc99 0%, #00ff4d55 100%);
  border: 2.5px solid #00e7fc;
  box-shadow: 0 0 32px #00e7fc99;
  z-index: 3;
}

@media (max-width: 900px) {
  .calendar-visual {
    padding: 1.2rem 0.6rem 1rem 0.6rem;
    max-width: 100%;
  }
}
/* Calendar styled to match login theme */
.calendar-card {
  background: rgba(17,17,17,0.32);
  backdrop-filter: blur(24px) saturate(180%);
  -webkit-backdrop-filter: blur(24px) saturate(180%);
  padding: 2.8rem 2.4rem 2.2rem 2.4rem;
  border-radius: 24px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.5), 0 0 24px #00e7fc22, 0 0 12px #00ff4d22;
  color: var(--text-primary, #fff);
  max-width: 900px;
  margin: 0 auto 2rem auto;
  position: relative;
  z-index: 2;
}

.calendar-header {
  margin-bottom: 2.2rem;
}
.calendar-title {
  font-size: 2.2rem;
  font-weight: 900;
  letter-spacing: 2px;
  color: #00e7fc;
  text-shadow: 0 2px 8px #00e7fc44, 0 1px 0 #fff2;
}

.calendar-body {
  min-height: 150px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary, #b3b3b3);
}

.calendar-notification {
  position: fixed;
  top: 32px;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(90deg, #00e7fc 0%, #00ff4d 100%);
  color: #fff;
  font-weight: 700;
  font-size: 1.1rem;
  padding: 0.7rem 2.2rem;
  border-radius: 12px;
  box-shadow: 0 4px 24px #00e7fc44, 0 2px 8px #00ff4d44;
  z-index: 9999;
  opacity: 0.98;
  animation: fadeInDown 0.5s;
}
@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-24px) translateX(-50%); }
  to { opacity: 0.98; transform: translateY(0) translateX(-50%); }
}

/* ===== AGENDA INTELIGENTE - NOVO LAYOUT ===== */
.agenda-hero {
  align-items: stretch;
  justify-content: flex-start;
  padding: 0;
}

.agenda-main {
  position: relative;
  z-index: 2;
  flex: 1;
  margin-left: 80px;
  margin-right: 0;
  width: calc(100% - 80px);
  max-width: none;
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* Layout Container Principal */
.agenda-layout-container {
  display: flex;
  gap: 1.5rem;
  height: 100%;
  max-width: 1600px;
  margin: 0 auto;
  width: 100%;
}

/* Sidebar Esquerdo */
.agenda-sidebar-left {
  width: 320px;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* Mini Calendário Card */
.mini-calendar-card {
  background: rgba(17, 17, 17, 0.6);
  backdrop-filter: blur(20px);
  border-radius: 16px;
  padding: 1.5rem;
  border: 1px solid rgba(0, 231, 252, 0.15);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
}

.mini-calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 1rem;
}

.mini-calendar-month {
  font-size: 1rem;
  font-weight: 700;
  color: #ffffff;
  margin: 0;
  text-transform: capitalize;
}

.mini-cal-nav-btn {
  background: rgba(0, 231, 252, 0.1);
  border: 1px solid rgba(0, 231, 252, 0.2);
  border-radius: 8px;
  padding: 0.4rem;
  cursor: pointer;
  color: #00e7fc;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.mini-cal-nav-btn:hover {
  background: rgba(0, 231, 252, 0.2);
  border-color: rgba(0, 231, 252, 0.4);
}

.mini-calendar-weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 0.25rem;
  margin-bottom: 0.5rem;
}

.mini-cal-weekday {
  text-align: center;
  font-size: 0.7rem;
  font-weight: 600;
  color: rgba(179, 234, 255, 0.6);
  text-transform: uppercase;
  padding: 0.25rem 0;
}

.mini-calendar-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 0.25rem;
}

.mini-cal-day {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  font-size: 0.85rem;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.7);
  cursor: pointer;
  transition: all 0.2s;
  background: rgba(255, 255, 255, 0.02);
}

.mini-cal-day:hover {
  background: rgba(0, 231, 252, 0.1);
  color: #ffffff;
}

.mini-cal-day.out-month {
  color: rgba(255, 255, 255, 0.3);
}

.mini-cal-day.today {
  background: linear-gradient(135deg, rgba(0, 231, 252, 0.3), rgba(0, 255, 77, 0.2));
  color: #ffffff;
  font-weight: 700;
  border: 1px solid rgba(0, 231, 252, 0.5);
}

.mini-cal-day.has-task {
  border: 1px solid rgba(0, 255, 77, 0.4);
}

.mini-cal-day.selected {
  background: linear-gradient(135deg, rgba(0, 231, 252, 0.4), rgba(0, 255, 77, 0.3));
  color: #ffffff;
  font-weight: 700;
  box-shadow: 0 0 12px rgba(0, 231, 252, 0.5);
}

/* Filtros Card */
.agenda-filters-card {
  background: rgba(17, 17, 17, 0.6);
  backdrop-filter: blur(20px);
  border-radius: 16px;
  padding: 1.5rem;
  border: 1px solid rgba(0, 231, 252, 0.15);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
}

.filters-title {
  font-size: 0.9rem;
  font-weight: 700;
  color: #ffffff;
  margin: 0 0 1rem 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.filter-search {
  position: relative;
  margin-bottom: 1.5rem;
}

.filter-search-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(0, 231, 252, 0.2);
  border-radius: 10px;
  padding: 0.75rem 1rem 0.75rem 2.5rem;
  color: #ffffff;
  font-size: 0.9rem;
  outline: none;
  transition: border-color 0.2s;
}

.filter-search-input:focus {
  border-color: rgba(0, 231, 252, 0.5);
}

.filter-search ion-icon {
  position: absolute;
  left: 0.75rem;
  top: 50%;
  transform: translateY(-50%);
  color: rgba(0, 231, 252, 0.6);
  font-size: 1.1rem;
}

.filter-users-list {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  margin-bottom: 1.5rem;
}

.filter-user-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.2s;
}

.filter-user-item:hover {
  background: rgba(0, 231, 252, 0.08);
}

.filter-user-item.active {
  background: rgba(0, 231, 252, 0.15);
  border: 1px solid rgba(0, 231, 252, 0.3);
}

.filter-user-checkbox {
  display: flex;
  align-items: center;
}

.checkbox-indicator {
  width: 20px;
  height: 20px;
  border: 2px solid rgba(0, 231, 252, 0.4);
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.checkbox-indicator.checked {
  background: linear-gradient(135deg, #00e7fc, #00ff4d);
  border-color: #00e7fc;
}

.checkbox-indicator.checked ion-icon {
  color: #ffffff;
  font-size: 0.9rem;
}

.filter-user-color {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  flex-shrink: 0;
}

.filter-user-name {
  flex: 1;
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.filter-option-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.filter-option-group label {
  font-size: 0.8rem;
  font-weight: 600;
  color: rgba(179, 234, 255, 0.7);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.filter-select {
  width: 100%;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(0, 231, 252, 0.2);
  border-radius: 10px;
  padding: 0.75rem 1rem;
  color: #ffffff;
  font-size: 0.9rem;
  outline: none;
  cursor: pointer;
  transition: border-color 0.2s;
}

.filter-select:focus {
  border-color: rgba(0, 231, 252, 0.5);
}

/* Área de Conteúdo Principal */
.agenda-content-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

/* Toolbar Superior */
.agenda-toolbar-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 1.5rem;
  background: rgba(17, 17, 17, 0.6);
  backdrop-filter: blur(20px);
  border-radius: 16px;
  border: 1px solid rgba(0, 231, 252, 0.15);
  margin-bottom: 1.5rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.toolbar-left {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.toolbar-menu-btn,
.toolbar-today-btn {
  background: rgba(0, 231, 252, 0.1);
  border: 1px solid rgba(0, 231, 252, 0.2);
  border-radius: 10px;
  padding: 0.6rem 1rem;
  color: #00e7fc;
  font-weight: 600;
  font-size: 0.9rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  transition: all 0.2s;
}

.toolbar-today-btn:hover,
.toolbar-menu-btn:hover {
  background: rgba(0, 231, 252, 0.2);
  border-color: rgba(0, 231, 252, 0.4);
}

.toolbar-nav {
  display: flex;
  gap: 0.5rem;
}

.nav-btn-small {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(0, 231, 252, 0.2);
  border-radius: 8px;
  padding: 0.5rem;
  cursor: pointer;
  color: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.nav-btn-small:hover {
  background: rgba(0, 231, 252, 0.1);
  color: #00e7fc;
  border-color: rgba(0, 231, 252, 0.3);
}

.toolbar-period {
  font-size: 1rem;
  font-weight: 600;
  color: #ffffff;
  margin-left: 1rem;
}

.toolbar-right {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.view-switch-segmented {
  display: flex;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 0.25rem;
  border: 1px solid rgba(0, 231, 252, 0.15);
}

.view-btn {
  background: transparent;
  border: none;
  border-radius: 8px;
  padding: 0.5rem 1rem;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 600;
  font-size: 0.85rem;
  cursor: pointer;
  transition: all 0.2s;
}

.view-btn:hover {
  color: rgba(255, 255, 255, 0.9);
  background: rgba(0, 231, 252, 0.1);
}

.view-btn.active {
  background: linear-gradient(135deg, rgba(0, 231, 252, 0.3), rgba(0, 255, 77, 0.2));
  color: #ffffff;
  box-shadow: 0 2px 8px rgba(0, 231, 252, 0.3);
}

.new-event-btn {
  background: linear-gradient(135deg, #00e7fc, #00ff4d);
  border: none;
  border-radius: 10px;
  padding: 0.6rem 1.25rem;
  color: #ffffff;
  font-weight: 700;
  font-size: 0.9rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  transition: all 0.2s;
  box-shadow: 0 4px 15px rgba(0, 231, 252, 0.3);
}

.new-event-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 231, 252, 0.5);
}

/* Container Principal do Calendário */
.calendar-main-container {
  flex: 1;
  background: rgba(17, 17, 17, 0.6);
  backdrop-filter: blur(20px);
  border-radius: 16px;
  border: 1px solid rgba(0, 231, 252, 0.15);
  padding: 1.5rem;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* ===== VISUALIZAÇÃO MENSAL ===== */
.calendar-month-view {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.month-weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 0.5rem;
  margin-bottom: 0.5rem;
  padding: 0 0.5rem;
}

.month-weekday {
  text-align: center;
  font-size: 0.85rem;
  font-weight: 700;
  color: rgba(179, 234, 255, 0.8);
  text-transform: uppercase;
  letter-spacing: 0.1em;
  padding: 0.75rem 0;
}

.month-days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 0.5rem;
  flex: 1;
}

.month-day-cell {
  min-height: 120px;
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(0, 231, 252, 0.1);
  border-radius: 12px;
  padding: 0.75rem;
  cursor: pointer;
  transition: all 0.2s;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.month-day-cell:hover {
  background: rgba(0, 231, 252, 0.08);
  border-color: rgba(0, 231, 252, 0.3);
  transform: translateY(-2px);
}

.month-day-cell.out-month {
  opacity: 0.4;
}

.month-day-cell.today {
  background: linear-gradient(135deg, rgba(0, 231, 252, 0.2), rgba(0, 255, 77, 0.1));
  border-color: rgba(0, 231, 252, 0.5);
  box-shadow: 0 0 20px rgba(0, 231, 252, 0.2);
}

.month-day-cell.has-task {
  border-color: rgba(0, 255, 77, 0.4);
}

.month-day-cell.selected {
  background: linear-gradient(135deg, rgba(0, 231, 252, 0.3), rgba(0, 255, 77, 0.2));
  border-color: rgba(0, 231, 252, 0.6);
  box-shadow: 0 0 25px rgba(0, 231, 252, 0.4);
}

.month-day-number {
  font-size: 0.9rem;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.9);
}

.month-day-events {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  overflow: hidden;
}

.month-event-bar {
  font-size: 0.75rem;
  padding: 0.3rem 0.5rem;
  border-radius: 6px;
  color: #ffffff;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  cursor: pointer;
  transition: all 0.2s;
}

.month-event-bar:hover {
  transform: translateX(2px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.month-event-bar.cyan {
  background: linear-gradient(90deg, rgba(0, 231, 252, 0.4), rgba(0, 231, 252, 0.2));
  border-left: 3px solid #00e7fc;
}

.month-event-bar.green {
  background: linear-gradient(90deg, rgba(0, 255, 77, 0.4), rgba(0, 255, 77, 0.2));
  border-left: 3px solid #00ff4d;
}

.month-event-bar.orange {
  background: linear-gradient(90deg, rgba(255, 152, 0, 0.4), rgba(255, 152, 0, 0.2));
  border-left: 3px solid #ff9800;
}

.month-event-bar.red {
  background: linear-gradient(90deg, rgba(255, 71, 87, 0.4), rgba(255, 71, 87, 0.2));
  border-left: 3px solid #ff4757;
}

.month-event-bar.purple {
  background: linear-gradient(90deg, rgba(168, 85, 247, 0.4), rgba(168, 85, 247, 0.2));
  border-left: 3px solid #a855f7;
}

.month-more-events {
  font-size: 0.7rem;
  color: rgba(179, 234, 255, 0.7);
  font-weight: 600;
  padding: 0.25rem 0.5rem;
  cursor: pointer;
}

.month-more-events:hover {
  color: #00e7fc;
}

/* ===== VISUALIZAÇÃO SEMANAL ===== */
.calendar-week-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* Reutilizar estilos da week-view-enhanced existente, mas ajustar para novo container */
.calendar-week-view .week-timeline-container {
  flex: 1;
  display: flex;
  gap: 0.5rem;
  overflow-x: auto;
  overflow-y: hidden;
}

/* ===== VISUALIZAÇÃO DIÁRIA ===== */
.calendar-day-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.02);
  border-radius: 16px;
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.05);

  .day-header-enhanced {
    padding: 1.5rem;
    background: linear-gradient(90deg, rgba(0, 231, 252, 0.05), rgba(0, 255, 77, 0.03));
    border-bottom: 1px solid rgba(0, 231, 252, 0.1);
    position: relative;
    overflow: hidden;

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 4px;
      height: 100%;
      background: linear-gradient(180deg, #00e7fc, #00ff4d);
    }

    .day-title-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: relative;
      z-index: 1;
    }

    .day-title {
      font-size: 1.75rem;
      font-weight: 700;
      background: linear-gradient(90deg, #fff, #b1f0ff);

      -webkit-text-fill-color: transparent;
      text-transform: capitalize;
      letter-spacing: -0.5px;
    }

    .day-count {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      background: rgba(0, 231, 252, 0.1);
      padding: 0.5rem 1.25rem;
      border-radius: 50px;
      color: #00e7fc;
      font-size: 0.95rem;
      font-weight: 500;
      border: 1px solid rgba(0, 231, 252, 0.2);
      backdrop-filter: blur(5px);
      transition: all 0.3s ease;

      &:hover {
        background: rgba(0, 231, 252, 0.15);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 231, 252, 0.1);
      }

      mat-icon {
        font-size: 1.2rem;
        width: 1.2rem;
        height: 1.2rem;
        color: #00e7fc;
      }
    }
  }

  .day-timeline-view {
    display: flex;
    flex: 1;
    overflow: hidden;
    position: relative;
    background: rgba(10, 15, 25, 0.7);

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent, rgba(0, 231, 252, 0.2), transparent);
    }
  }

  .day-time-column {
    width: 80px;
    flex-shrink: 0;
    border-right: 1px solid rgba(0, 231, 252, 0.1);
    position: relative;
    background: rgba(0, 0, 0, 0.2);

    .day-time-slot {
      height: 60px;
      position: relative;
      display: flex;
      align-items: flex-start;
      justify-content: flex-end;
      padding: 0.5rem 1rem;

      &::after {
        content: '';
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        height: 1px;
        background: rgba(0, 231, 252, 0.05);
      }

      .day-time-label {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
        transform: translateY(-50%);
        position: relative;
        background: rgba(10, 15, 25, 0.9);
        padding: 0 0.5rem;
        z-index: 2;
        font-weight: 500;
        letter-spacing: 0.5px;
      }
    }

    .day-time-line {
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      height: 1px;
      background: rgba(0, 231, 252, 0.1);
    }
  }

  .day-events-column {
    flex: 1;
    position: relative;
    overflow-y: auto;
    background: rgba(10, 15, 25, 0.5);

    .day-events-container {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      padding: 1rem;
    }

    .day-event-card-enhanced {
      position: absolute;
      left: 1rem;
      right: 1rem;
      border-radius: 12px;
      padding: 1.25rem;
      color: white;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      border-left: 4px solid;
      overflow: hidden;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.05);

      &::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 100%;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.03), rgba(255, 255, 255, 0.01));
        z-index: -1;
      }

      &:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(0, 231, 252, 0.2);
        z-index: 2;
        border-color: rgba(0, 231, 252, 0.5);

        .day-event-header .list-item-action-btn {
          opacity: 1;
          transform: translateX(0);
        }
      }

      .day-event-content {
        display: flex;
        flex-direction: column;
        height: 100%;
      }

      .day-event-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
        position: relative;

        .day-event-time-badge {
          display: flex;
          align-items: center;
          gap: 0.5rem;
          font-size: 0.85rem;
          background: rgba(0, 0, 0, 0.3);
          padding: 0.35rem 1rem;
          border-radius: 50px;
          font-weight: 500;
          backdrop-filter: blur(5px);
          border: 1px solid rgba(255, 255, 255, 0.1);

          mat-icon {
            font-size: 1rem;
            width: 1rem;
            height: 1rem;
            color: #00e7fc;
          }

          span {
            color: #b1f0ff;
            font-weight: 500;
          }
        }

        .day-event-status {
          font-size: 0.75rem;
          font-weight: 600;
          padding: 0.4rem 1rem;
          border-radius: 50px;
          text-transform: uppercase;
          letter-spacing: 0.5px;
          display: inline-flex;
          align-items: center;
          gap: 0.5rem;

          &::before {
            content: '';
            display: inline-block;
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: currentColor;
          }

          &.status-pendente {
            background: rgba(255, 193, 7, 0.1);
            color: #ffc107;
            border: 1px solid rgba(255, 193, 7, 0.2);
          }

          &.status-em-andamento {
            background: rgba(0, 231, 252, 0.1);
            color: #00e7fc;
            border: 1px solid rgba(0, 231, 252, 0.2);
          }

          &.status-concluida {
            background: rgba(0, 255, 77, 0.1);
            color: #00ff4d;
            border: 1px solid rgba(0, 255, 77, 0.2);
          }

          &.status-cancelada {
            background: rgba(244, 67, 54, 0.1);
            color: #f44336;
            border: 1px solid rgba(244, 67, 54, 0.2);
          }
        }

        .list-item-action-btn {
          opacity: 0;
          transform: translateX(5px);
          transition: all 0.3s ease;
          background: rgba(255, 255, 255, 0.1);
          border: 1px solid rgba(255, 255, 255, 0.1);
          width: 32px;
          height: 32px;
          display: flex;
          align-items: center;
          justify-content: center;
          border-radius: 8px;
          color: #fff;
          cursor: pointer;

          &:hover {
            background: rgba(0, 231, 252, 0.2);
            border-color: rgba(0, 231, 252, 0.3);
            color: #00e7fc;
          }

          mat-icon {
            font-size: 1.25rem;
            width: 1.25rem;
            height: 1.25rem;
          }
        }
      }

      .day-event-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        line-height: 1.4;
        color: #fff;
        letter-spacing: 0.2px;
      }

      .day-event-footer {
        margin-top: auto;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
        gap: 1rem;

        .event-meta {
          display: flex;
          align-items: center;
          gap: 0.5rem;
          font-size: 0.85rem;
          color: rgba(255, 255, 255, 0.7);

          mat-icon {
            font-size: 1.1rem;
            width: 1.1rem;
            height: 1.1rem;
            color: #00e7fc;
          }
        }
      }

      // Cores dos eventos
      &.red {
        background: linear-gradient(135deg, rgba(211, 47, 47, 0.2), rgba(211, 47, 47, 0.1));
        border-left-color: #d32f2f;

        .day-event-header .day-event-time-badge {
          color: #ff8a80;

          mat-icon {
            color: #ff8a80;
          }
        }
      }

      &.orange {
        background: linear-gradient(135deg, rgba(245, 124, 0, 0.2), rgba(245, 124, 0, 0.1));
        border-left-color: #f57c00;

        .day-event-header .day-event-time-badge {
          color: #ffb74d;

          mat-icon {
            color: #ffb74d;
          }
        }
      }

      &.yellow {
        background: linear-gradient(135deg, rgba(251, 192, 45, 0.2), rgba(251, 192, 45, 0.1));
        border-left-color: #fbc02d;

        .day-event-header .day-event-time-badge {
          color: #ffe082;

          mat-icon {
            color: #ffe082;
          }
        }
      }

      &.green {
        background: linear-gradient(135deg, rgba(56, 142, 60, 0.2), rgba(56, 142, 60, 0.1));
        border-left-color: #388e3c;

        .day-event-header .day-event-time-badge {
          color: #81c784;

          mat-icon {
            color: #81c784;
          }
        }
      }

      &.blue {
        background: linear-gradient(135deg, rgba(25, 118, 210, 0.2), rgba(25, 118, 210, 0.1));
        border-left-color: #1976d2;

        .day-event-header .day-event-time-badge {
          color: #90caf9;

          mat-icon {
            color: #90caf9;
          }
        }
      }

      &.purple {
        background: linear-gradient(135deg, rgba(123, 31, 162, 0.2), rgba(123, 31, 162, 0.1));
        border-left-color: #7b1fa2;

        .day-event-header .day-event-time-badge {
          color: #ce93d8;

          mat-icon {
            color: #ce93d8;
          }
        }
      }

      &.pink {
        background: linear-gradient(135deg, rgba(194, 24, 91, 0.2), rgba(194, 24, 91, 0.1));
        border-left-color: #c2185b;

        .day-event-header .day-event-time-badge {
          color: #f48fb1;

          mat-icon {
            color: #f48fb1;
          }
        }
      }

      &.cyan {
        background: linear-gradient(135deg, rgba(0, 151, 167, 0.2), rgba(0, 151, 167, 0.1));
        border-left-color: #0097a7;

        .day-event-header .day-event-time-badge {
          color: #4dd0e1;

          mat-icon {
            color: #4dd0e1;
          }
        }
      }

      // Estilos de urgência
      &.leve {
        opacity: 0.9;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      }

      &.media {
        opacity: 0.95;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
      }

      &.alta {
        opacity: 1;
        box-shadow: 0 4px 25px rgba(255, 0, 0, 0.2), 0 0 0 2px rgba(255, 0, 0, 0.3);
        animation: pulse 2s infinite;

        @keyframes pulse {
          0% { box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.4); }
          70% { box-shadow: 0 0 0 10px rgba(255, 0, 0, 0); }
          100% { box-shadow: 0 0 0 0 rgba(255, 0, 0, 0); }
        }
      }
    }

    .list-empty {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
      padding: 3rem 2rem;
      text-align: center;
      color: rgba(255, 255, 255, 0.5);
      background: rgba(10, 15, 25, 0.3);
      border-radius: 12px;
      border: 2px dashed rgba(0, 231, 252, 0.1);

      .empty-icon-large {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(0, 231, 252, 0.1), rgba(0, 255, 77, 0.05));
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        position: relative;
        overflow: hidden;

        &::before {
          content: '';
          position: absolute;
          top: -50%;
          left: -50%;
          width: 200%;
          height: 200%;
          background: radial-gradient(circle, rgba(0, 231, 252, 0.1) 0%, transparent 70%);
          animation: rotate 10s linear infinite;
        }

        mat-icon {
          font-size: 3rem;
          width: 3rem;
          height: 3rem;
          color: #00e7fc;
          position: relative;
          z-index: 1;
        }
      }

      h3 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.75rem;
        background: linear-gradient(90deg, #fff, #b1f0ff);

        -webkit-text-fill-color: transparent;
        letter-spacing: -0.5px;
      }

      p {
        margin-bottom: 2rem;
        max-width: 400px;
        line-height: 1.6;
        font-size: 1.05rem;
      }

      .new-task-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 600;
        padding: 0.75rem 2rem;
        border-radius: 50px;
        background: linear-gradient(135deg, #00e7fc, #00b8d9);
        color: #05090f;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 15px rgba(0, 231, 252, 0.3);
        border: none;
        cursor: pointer;
        font-size: 1rem;
        letter-spacing: 0.5px;
        text-transform: uppercase;

        &:hover {
          transform: translateY(-2px);
          box-shadow: 0 8px 25px rgba(0, 231, 252, 0.4);
          background: linear-gradient(135deg, #00d8f2, #00a8c5);
        }

        &:active {
          transform: translateY(0);
          box-shadow: 0 4px 15px rgba(0, 231, 252, 0.3);
        }

        mat-icon {
          font-size: 1.5rem;
          width: 1.5rem;
          height: 1.5rem;
        }
      }
    }
  }
}

