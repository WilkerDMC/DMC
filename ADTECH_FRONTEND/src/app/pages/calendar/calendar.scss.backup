/* ===== PAINEL DE CHAT ===== */
.chat-panel {
  position: fixed;
  right: -400px;
  top: 0;
  width: 400px;
  height: 100vh;
  background: rgba(10, 18, 26, 0.98);
  backdrop-filter: blur(20px);
  border-left: 1px solid rgba(0, 231, 252, 0.2);
  box-shadow: -4px 0 30px rgba(0, 0, 0, 0.8);
  z-index: 1000;
  transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
}

.chat-panel.open {
  right: 0;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 1px solid rgba(0, 231, 252, 0.2);
  background: rgba(7, 12, 18, 0.9);
}

.chat-header-info {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.chat-header-info ion-icon {
  font-size: 1.5rem;
  color: #00e7fc;
}

.chat-header-info h3 {
  margin: 0;
  font-size: 1.1rem;
  font-weight: 700;
  color: #ffffff;
}

.chat-close-btn {
  background: rgba(255, 255, 255, 0.1);
  border: none;
  border-radius: 8px;
  padding: 0.5rem;
  cursor: pointer;
  color: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.chat-close-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

.chat-users-list {
  flex: 0 0 auto;
  overflow-y: auto;
  border-bottom: 1px solid rgba(0, 231, 252, 0.1);
  max-height: 200px;
}

.chat-user-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.5rem;
  cursor: pointer;
  transition: background 0.2s;
  position: relative;
}

.chat-user-item:hover {
  background: rgba(0, 231, 252, 0.1);
}

.chat-user-item.active {
  background: rgba(0, 231, 252, 0.15);
  border-left: 3px solid #00e7fc;
}

.chat-user-avatar {
  width: 45px;
  height: 45px;
  border-radius: 50%;
